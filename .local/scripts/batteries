#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break
	status=$(sed "s/[Dd]ischarging/ï•¸/;s/[Nn]ot charging/ïŠ/;s/[Cc]harging/ï‡¦ /;s/[Uu]nknown/ï†¸ /;s/[Ff]ull/îŒ•/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 6 ] && [ "$status" = "ï•¸" ] && warn="ï„ª" && notify-send 'Low Battery'
	 [ "$capacity" -le 3 ] && xbacklight -set 10

	printf "%s%s%s%% " "%{F#15D915}$status%{F-}" "%{F#f00}$warn%{F-}" "$capacity"
	unset warn
done | sed 's/ *$//'

